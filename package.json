{
  "name": "eslint-configs-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --parallel --topological run build",
    "fix": "eslint --ext .js,.jsx,.ts,.tsx --fix --max-warnings 0 .",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --max-warnings 0 .",
    "postinstall": "husky install",
    "prepack": "yarn build",
    "test": "jest",
    "test:ci": "jest --ci --colors",
    "typecheck": "tsc --noEmit",
    "version": "yarn install && git add yarn.lock"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@lboecker/eslint-config": "workspace:*",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/eslint": "^8",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.6",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "babel-jest": "^27.4.5",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.4",
    "prettier": "2.5.1",
    "typescript": "^4.5.4"
  },
  "packageManager": "yarn@3.1.0"
}
