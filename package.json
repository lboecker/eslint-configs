{
  "name": "eslint-configs-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --parallel --topological run build",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "eslint --ext .js,.jsx,.ts,.tsx --fix --max-warnings 0 .",
    "fix:prettier": "prettier --write '**/*.{json,md,yaml,yml}'",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx --max-warnings 0 .",
    "lint:prettier": "prettier --check '**/*.{json,md,yaml,yml}'",
    "prepack": "yarn build",
    "test": "jest",
    "test:ci": "jest --ci --colors",
    "typecheck": "tsc --noEmit",
    "version": "yarn install && git add yarn.lock"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.14.0",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/preset-env": "^7.14.0",
    "@babel/preset-typescript": "^7.13.0",
    "@lboecker/eslint-config": "workspace:*",
    "@types/eslint": "^7.2.10",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.4",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "babel-jest": "^27.1.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^25.2.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^27.1.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "2.3.2",
    "simple-git-hooks": "^2.4.1",
    "typescript": "^4.2.4"
  },
  "packageManager": "yarn@3.1.0"
}
