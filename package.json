{
  "name": "eslint-configs-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna exec --parallel -- babel --root-mode upward --extensions .js,.jsx,.ts,.tsx --out-dir dist --delete-dir-on-start src",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "eslint --ext .js,.jsx,.ts,.tsx --fix --max-warnings 0 .",
    "fix:prettier": "prettier --write '**/*.{json,yaml,yml}'",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx --max-warnings 0 .",
    "lint:prettier": "prettier --check '**/*.{json,yaml,yml}'",
    "prepare": "yarn build",
    "test": "jest",
    "test:ci": "yarn test --ci --colors",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@lboecker/eslint-config": "*",
    "@types/jest": "^26.0.0",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-jsx-a11y": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "jest": "^26.0.1",
    "lerna": "^3.22.0",
    "prettier": "^2.0.5",
    "typescript": "^3.9.3"
  }
}
