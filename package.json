{
  "name": "eslint-configs-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --parallel --topological run build",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "eslint --ext .js,.jsx,.ts,.tsx --fix --max-warnings 0 .",
    "fix:prettier": "prettier --write '**/*.{json,yaml,yml}'",
    "hooks:install": "node node_modules/husky/husky.js install",
    "hooks:uninstall": "node node_modules/husky/husky.js uninstall",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx --max-warnings 0 .",
    "lint:prettier": "prettier --check '**/*.{json,yaml,yml}'",
    "prepack": "yarn build",
    "test": "jest",
    "test:ci": "jest --ci --colors",
    "typecheck": "tsc --noEmit",
    "version": "yarn install && git add yarn.lock"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn typecheck"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --ext .js,.jsx,.ts,.tsx --fix --max-warnings 0",
      "jest --ci --findRelatedTests"
    ],
    "*.{json,yaml,yml}": "prettier --write"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@lboecker/eslint-config": "workspace:*",
    "@types/eslint": "^7.2.2",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-jest": "^26.0.1",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-jsx-a11y": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "husky": "^4.3.8",
    "jest": "^26.0.1",
    "lerna": "^3.22.0",
    "lint-staged": "^10.5.3",
    "prettier": "2.1.2",
    "typescript": "^4.0.2"
  }
}
